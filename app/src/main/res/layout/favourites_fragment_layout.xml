<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#313131"
    tools:context="com.keran.marinov.itunezfeed.ui.fragment.FavouritesFragment">


        <TextView
            android:id="@+id/hottest_title_text_view"
            android:layout_width="fill_parent"
            android:gravity="center|center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#414141"
            android:text="@string/my_favourites_string"
            android:textColor="#f0720b"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/feed_list_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#313131"
            android:cacheColorHint="#00000000"
            android:fastScrollEnabled="true"
            android:scrollbarFadeDuration="10000"
            android:scrollbars="vertical" />

</LinearLayout>

